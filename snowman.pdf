from turtle import *
def draw_circle(colour,radius,x,y):
  penup()
  goto(x,y)
  pendown()
  fillcolor(colour)
  begin_fill()
  circle(radius)
  end_fill()
def draw_snowman():
  draw_circle("white",50,0,-50)
  draw_circle("white",40,0,0)
  draw_circle("white",30,0,50)
  draw_circle("black",4,-10,75)
  draw_circle("black",4,10,75)
  penup()
  goto(0,65)
  pendown()
  seth(-60)
  fillcolor("purple")
  begin_fill()
  forward(10)
  left(120)
  forward(10)
  left(120)
  forward(10)
  end_fill()
  penup()
  goto(-40,110)
  pendown()
  seth(0)
  fillcolor("black")
  begin_fill()
  forward(20)
  left(60)
  forward(30)
  right(120)
  forward(30)
  left(60)
  forward(20)
  right(90)
  forward(10)
  right(90)
  forward(80)
  right(90)
  forward(10)
  end_fill()
  
speed(12)
bgcolor("lightblue")
draw_snowman()
done()
